<%= form_with model: [ @sound, @sound.comments.build ], local: true, validate: true do |form| %>
  <div class="form-group">
    <%= form.text_area :comment, class: "form-control", placeholder: "Yorum ekle" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit "Gonder", class: "btn btn-primary" %>
  </div>

<% end %>