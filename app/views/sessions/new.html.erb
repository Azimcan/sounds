<% title "Login" %>
<div class="m-2 p-2">
	<h2 class="text-center">Giriş</h2>
	<div class="d-flex justify-content-center m-2 p-2">
		<%= form_for :session, url: session_path do |form| %>
			
			<div class="form-group">
				<%= form.text_field :email, class: "form-control", placeholder: "Email" %>
			</div>
			
			<div class="form-group">
				<%= form.password_field :password, class: "form-control", placeholder: "Şifre" %>
			</div>

			<div class="d-flex justify-content-center">
				<%= form.submit "Giriş", class: "btn btn-primary btn-block" %>
			</div>

		<% end %>
	</div>
</div>