<% content_for(:profile_content) do %>
  <div class="row m-2 p-2">
    <div class="col-12 shadow-lg p-3 mb-3 bg-dark rounded">
      <h2 class="text-light"><%= page.capitalize %></h2>
      <div class="d-flex justify-content-end">
        <%= add_button(page) %>
      </div>
    </div>
    
    <% if @data.blank? %>
      <p class="col-12">Kullanıcıya ait <%= page %> bulunmamaktadır</p>
    <% end %>

    <%= render?(page) %>
  </div>
<% end %>

