    <%= form.label :"Sesin adi" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Sesin adi" %>
  </div>

  <div class="form-group">
    <%= form.label :Tag %>
    <%= form.collection_select :tag, @tags, :tag_name, :tag_name, { include_blank: true }, { class: "custom-select" } %>
  </div>

  <div class="form-group">
    <%= form.label :"Sesin adresi" %>
    <%= form.text_field :location, class: "form-control", placeholder: "Sesin adresi" %>
  </div>


