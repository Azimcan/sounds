<% title "Sound" %>
<div class="row m-2 p-2">
  <div class="col-12 shadow-lg p-3 mb-3 bg-white rounded">
    <h2 class="col-12"><%= @sound.name %></h2>
    <h5 class="col-12"><%= @sound.tag %></h5>
    <div class="col-12">
    	<iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%= @sound.location %>"></iframe>
	    <div class="btn-group d-flex">
        <%= link_to 'Sepete Ekle', create_cart_item(sound: @sound, page: "sound"), class: "btn btn-secondary" %>
        <%= link_to 'Duzenle', edit_sound_path(@sound), class: "btn btn-secondary" %>
        <%= link_to 'Geri', :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<div class="m-2 p-2">
  <div class="col-12 shadow-lg p-3 mb-3 bg-white rounded">
    <%= render 'sounds/comments', object: @sound %>
    <hr>
    <%= render 'comment/form' %>
  </div>
</div>
