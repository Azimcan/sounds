<% unless @sounds.blank? %>
  <% @sounds.each do |sound| %>
    <div class="col-12 shadow-lg p-3 my-3 bg-white rounded">
      <h2><%= sound.name %></h2>
      <h5><%= sound.tag %></h5>
      <h5 class="d-flex justify-content-end"><%= link_to sound.user.username, profile_path(sound.user), class: "p-2 badge badge-danger" %></h5>
      <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%= sound.location %>"></iframe>
      <div class="btn-group d-flex">
        <%= link_to 'Sepete Ekle', create_cart_item_path(sound: sound.id, page: "main"), class: "btn btn-secondary" %>
        <%= link_to "Detay", sound_path(sound.id), class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="col-12">Ses bulunamadÄ±.</p>
<% end %>

